<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, rgba(192, 183, 153, 0.521), rgba(65, 180, 206, 0.8)), url('https://source.unsplash.com/1600x900/?abstract,modern');
            background-size: cover;
            background-attachment: fixed;
            color: white;
        }
        .form-container, .table-container {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(20px);
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0px 6px 15px rgba(0, 0, 0, 0.3);
        }
        .btn-primary {
            background: linear-gradient(to right, #ff7f50, #ff4500);
            border: none;
        }
        .btn-primary:hover {
            background: linear-gradient(to right, #ff4500, #ff7f50);
        }
        table {
            width: 100%;
            color: white;
        }
        table, th, td {
            border: 1px solid white;
            text-align: center;
        }
        th, td {
            padding: 10px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Update Employee</h1>
        <div class="text-center mb-3">
            <a href="/viewemp" class="btn btn-light">View Employees</a>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-6 form-container">
                <form method="post" action="/updatedata" enctype="multipart/form-data">
                    <input type="hidden" name="empId" value="<%= singleobj.id %>">
                    <div class="mb-3">
                        <label class="form-label">Enter Name</label>
                        <input type="text" name="name" class="form-control" value="<%= singleobj.name %>" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Enter Email</label>
                        <input type="email" name="email" class="form-control" value="<%= singleobj.email %>" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Enter Password</label>
                        <input type="password" name="password" class="form-control" value="<%= singleobj.password %>" required>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Enter Gender</label><br>
                        <input type="radio" name="gender" value="male" <%= singleobj.gender == "male" ? "checked" : "" %>> Male
                        <input type="radio" name="gender" value="female" <%= singleobj.gender == "female" ? "checked" : "" %>> Female
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Hobbies</label><br>
                        <input type="checkbox" name="hobby[]" value="music" <%= singleobj.hobby.includes("music") ? "checked" : "" %>> Music
                        <input type="checkbox" name="hobby[]" value="singing" <%= singleobj.hobby.includes("singing") ? "checked" : "" %>> Singing
                        <input type="checkbox" name="hobby[]" value="running" <%= singleobj.hobby.includes("running") ? "checked" : "" %>> Running
                    </div>
                    <% var cityname = ["surat", "vadodara", "junagadh", "rajkot"]; %>
                    <div class="mb-3">
                        <label class="form-label">Select City</label>
                        <select name="city" class="form-select" required>
                            <option value="">--Select City--</option>
                            <% cityname.map((v) => { %>
                                <option value="<%= v %>" <%= singleobj.city == v ? "selected" : "" %>><%= v %></option>
                            <% }) %>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Enter Text</label>
                        <textarea name="text" class="form-control" required><%= singleobj.text %></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Upload Image</label>
                        <input type="file" name="image" class="form-control">
                        <img src="<%= singleobj.image %>" alt="" width="100px" class="mt-2">
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>